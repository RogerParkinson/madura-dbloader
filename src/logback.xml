<configuration>

  <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
		<layout class="ch.qos.logback.classic.PatternLayout">
			<Pattern>%-35(%d{HH:mm:ss.SSS} [%thread]) %-5level %logger{35} - %msg%n</Pattern> 
		</layout>  
  </appender>
  
  <logger name="nz.co.senanque.dbloader" level="INFO" />

  <root level="WARN">
    <appender-ref ref="console" />
  </root>
</configuration>