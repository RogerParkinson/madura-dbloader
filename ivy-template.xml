<ivy-module rev="$Id$">
    <info publication="@timestamp@">
        <license name="Apache License, Version 2.0" url="http://www.apache.org/licenses/LICENSE-2.0"/>
        <description homepage="http://code.google.com/p/@ant.project.name@/">
        An Ant task that scans a directory for sql files and runs them in the right order.
        It handles multiple schemas (one schema per file) and optionally drops and recreates the schemas.
        </description>
    </info>
    <publications>
        <artifact conf="default"/>
        <artifact name="javadoc" type="javadoc" ext="zip" conf="default"/>
        <artifact name="source" type="source" ext="zip" conf="default"/>
        <artifact name="@project.name@" type="doc" ext="pdf" conf="default"/>
    </publications>
    <dependencies>
		<dependency org="org.apache.commons" name="commons-lang" rev="2.4" conf="default->default"/>
        <dependency org="org.slf4j" name="slf4j" rev="1.5.11" conf="default->jcl-migration"/> 
        <dependency org="ch.qos" name="logback" rev="0.9.18">
        	<exclude org="org.slf4j" module="slf4j"/>
        </dependency>
        <exclude org="commons-logging" ext="*"/>
        <exclude org="logkit" ext="jar"/>
        <exclude org="javax.servlet" ext="jar"/>
    </dependencies>
</ivy-module>
